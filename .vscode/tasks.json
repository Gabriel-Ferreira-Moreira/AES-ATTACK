{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake build",
            "type": "cmake",
            "command": "build",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Run all tests",
            "command": "${command:testing.runAll}",
            "dependsOn": [
                "CMake build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}